<div class="container-fluid text-center">

  <div class="col-xs-8 col-xs-push-2">
    <p id="notice"><%= notice %></p>
  </div>
            <span style="font-size:36px">
              <%= @user.name %><br>
              <%= image_tag @user.icon.url(), style:'max-width:150px; float:right', class:'img_rounded' %>
            </span>
            <strong>Email:</strong>
              <%= @user.email %>
          <% if logged_in? %>
              <% if @user == current_user %>
                <button type="button" class="btn btn-default"><%= link_to 'New Post', new_post_path %></button>
                <button type="button" class="btn btn-default"><%= link_to 'Edit Info', edit_user_path(@user) %></button>
                <%= link_to 'Delete Account', @user, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger "%>
              <% end %>
          <% end %>
</div>
